<% provide(:title, 'All users') %>
<h3>All users</h3>

  <%= will_paginate %>  
<% @users.each do |user| %>

<p>
      <%= link_to user do %>
        <div class="message rcorners">
          <div>
          <%= gravatar_for user, size: 50 %>
            <%= user.name %>
          </div>
        
      <% end %>
      
      <% if !user.about.nil?  %>
        <div class="userabout">
          <%= user.about.truncate_words(30) %>
        </div>
      <% end %>
        </div>
</p>
<% end %>

  <%= will_paginate %>